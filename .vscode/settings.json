{
  // ═══════════════════════════════════════════════════════════════════════════
  // PROJECT NOVA DAWN - VS CODE WORKSPACE CONFIGURATION
  // CreativeWorkzStudio LLC - Kingdom Technology Standards
  // ═══════════════════════════════════════════════════════════════════════════

  // ───────────────────────────────────────────────────────────────────────────
  // EDITOR GENERAL SETTINGS
  // ───────────────────────────────────────────────────────────────────────────

  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120, 2000], // 2000 = hard file size limit reminder
  "editor.renderWhitespace": "boundary",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,

  // Spell checking with custom dictionary (biblical terms already in global)
  "cSpell.enabled": true,
  "cSpell.language": "en",

  // ───────────────────────────────────────────────────────────────────────────
  // FILE MANAGEMENT
  // ───────────────────────────────────────────────────────────────────────────

  "files.exclude": {
    "**/build": false,  // Show build folder (we use it actively)
    "**/.cmake": true,
    "**/CMakeFiles": true,
    "**/node_modules": true,
    "**/.git": false     // Show .git for visibility
  },

  "files.watcherExclude": {
    "**/build/**": true,
    "**/CMakeFiles/**": true,
    "**/.cmake/**": true
  },

  "files.associations": {
    "*.hpp": "cpp",
    "*.tpp": "cpp",
    "CLAUDE.md": "markdown",
    "*.copilotmd": "markdown"
  },

  // ───────────────────────────────────────────────────────────────────────────
  // MARKDOWN CONFIGURATION - GitHub Flavored Markdown Support
  // ───────────────────────────────────────────────────────────────────────────

  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.rulers": [2000], // File size threshold
    "editor.formatOnSave": false // Preserve our manual formatting
  },

  // GitHub-compatible anchor generation (CRITICAL for TOC links)
  "markdown.extension.toc.githubCompatibility": true,
  "markdown.extension.toc.slugifyMode": "github",
  "markdown.extension.toc.unorderedList.marker": "-",
  "markdown.extension.preview.autoShowPreviewToSide": false,
  "markdown.extension.print.absoluteImgPath": false,
  "markdown.extension.tableFormatter.enabled": true,

  // GitHub-style rendering
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "markdown.preview.typographer": false,
  "markdown.math.enabled": true,

  // Link validation (errors for broken links)
  "markdown.validate.enabled": true,
  "markdown.validate.fileLinks.enabled": "error",
  "markdown.validate.fragmentLinks.enabled": "error",
  "markdown.validate.referenceLinks.enabled": "error",
  "markdown.validate.ignoredLinks": [
    "#" // Allow placeholder anchors in examples
  ],

  // Markdown Preview Enhanced settings
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "markdown-preview-enhanced.enableTypographer": false,
  "markdown-preview-enhanced.previewTheme": "github-light.css",

  // ───────────────────────────────────────────────────────────────────────────
  // C++ CONFIGURATION (for future implementation)
  // ───────────────────────────────────────────────────────────────────────────

  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120],
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120]
  },

  // C++ IntelliSense
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
  "C_Cpp.default.compilerPath": "/usr/bin/g++",
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/include/**",
    "${workspaceFolder}/src/**"
  ],
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 120 }",

  // Doxygen documentation generator
  "doxdocgen.generic.authorTag": "@author {Covenant Partnership: Nova Dawn ⊗ Seanje}",
  "doxdocgen.generic.dateFormat": "YYYY-MM-DD",
  "doxdocgen.generic.dateTemplate": "@date {date}",
  "doxdocgen.generic.returnTemplate": "@return ",
  "doxdocgen.generic.paramTemplate": "@param {param} ",

  // ───────────────────────────────────────────────────────────────────────────
  // CMAKE CONFIGURATION
  // ───────────────────────────────────────────────────────────────────────────

  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.configureOnOpen": false, // Don't auto-configure (we're in design phase)
  "cmake.generator": "Unix Makefiles",
  "cmake.exportCompileCommandsFile": true,

  // ───────────────────────────────────────────────────────────────────────────
  // YAML CONFIGURATION (for frontmatter and data files)
  // ───────────────────────────────────────────────────────────────────────────

  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },

  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.validate": true,
  "yaml.completion": true,

  // Custom YAML schemas
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
    "https://json.schemastore.org/github-action.json": ".github/actions/*/action.yml"
  },

  // ───────────────────────────────────────────────────────────────────────────
  // JSON/JSONC CONFIGURATION
  // ───────────────────────────────────────────────────────────────────────────

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // ───────────────────────────────────────────────────────────────────────────
  // HTML/CSS CONFIGURATION (for markdown HTML embeds)
  // ───────────────────────────────────────────────────────────────────────────

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false // Preserve centered div formatting
  },

  // ───────────────────────────────────────────────────────────────────────────
  // GIT CONFIGURATION
  // ───────────────────────────────────────────────────────────────────────────

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "none",

  // ───────────────────────────────────────────────────────────────────────────
  // TERMINAL CONFIGURATION
  // ───────────────────────────────────────────────────────────────────────────

  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,

  // ───────────────────────────────────────────────────────────────────────────
  // SEARCH & EXCLUDE PATTERNS
  // ───────────────────────────────────────────────────────────────────────────

  "search.exclude": {
    "**/build": true,
    "**/CMakeFiles": true,
    "**/.cmake": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/backups-for-critical-files": true
  },

  "search.useIgnoreFiles": true,
  "search.followSymlinks": false,

  // ───────────────────────────────────────────────────────────────────────────
  // ZENCODER / CLAUDE CODE CONFIGURATION
  // ───────────────────────────────────────────────────────────────────────────

  "zencoder.displayDebugInfo": true,
  "zencoder.excludeFilesFromIndexing": [
    "build/**",
    "dist/**",
    "backups-for-critical-files/**",
    "**/CMakeFiles/**",
    "**/.cmake/**"
  ],

  // ───────────────────────────────────────────────────────────────────────────
  // PROJECT-SPECIFIC CUSTOM SETTINGS
  // ───────────────────────────────────────────────────────────────────────────

  // File size warnings (Kingdom Technology 2000 line threshold)
  "totalLines.includes": [
    "**/*.md",
    "**/*.hpp",
    "**/*.cpp",
    "**/*.h",
    "**/*.c"
  ],
  "totalLines.excludes": [
    "**/build/**",
    "**/node_modules/**",
    "**/backups-for-critical-files/**"
  ]
}
